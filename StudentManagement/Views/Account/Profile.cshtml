@model StudentManagement.ViewModel.ProfileViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">


<div class="container mt-5">

    <h2 class="text-center mb-4 text-uppercase">Profile Details</h2>

    <!-- Personal Details Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0" style="background-color: #f8f9fa;">
                <div class="card-header" style="background-color: #0077be; color: white; text-align: center;">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle ms-2" style="margin-right:13px"></i> Personal Details
                    </h3>
                </div>
                <div class="card-body" style="font-size:18px;">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-person-fill ms-2" style="margin-right:13px"></i> Full Name:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.FullName</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-envelope-fill ms-2" style="margin-right:13px"></i> Email:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.Email</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-phone-fill ms-2" style="margin-right:13px"></i> Phone Number:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.Phonenumber</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-hourglass-split ms-2" style="margin-right:13px"></i> Age:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.Age</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-house-fill ms-2" style="margin-right:13px"></i> Address:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.Address</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-person-badge-fill ms-2" style="margin-right:13px"></i> Guardian Name:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.Guardian</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-gender-ambiguous ms-2" style="margin-right:13px"></i> Gender:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.Gender</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (User.IsInRole(StudentManagement.Common.CustomRole.Student)){
    <!-- Academic Details Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0" style="background-color: #f8f9fa;">
                <div class="card-header" style="background-color: #007f66 ; color: white; text-align: center;">
                    <h3 class="mb-0">
                        <i class="bi bi-book-half ms-2" style="margin-right:13px"></i> Academic Details
                    </h3>
                </div>
                <div class="card-body" style="font-size:18px;">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-award-fill ms-2" style="margin-right:13px"></i> Grade:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.Grade</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong><i class="bi bi-journal-text ms-2" style="margin-right:13px"></i> Class:</strong>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.Class</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>
  

<!-- Include Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
