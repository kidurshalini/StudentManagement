@model StudentManagement.ViewModel.SubjectViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

@{
    ViewData["Title"] = "Subject Edit Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>

    @{
        var successMessage = TempData["SuccessMessage"] as string;
        var errorMessage = TempData["ErrorMessage"] as string;
    }

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <!-- Success and Error Messages -->
                <div class="alert-container mb-3">
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i><strong>Success!</strong> @successMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show custom-alert" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i><strong>Error!</strong> @errorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                </div>

                <!-- Form Card with New Design -->
                <div class="card shadow-lg rounded-3 border-0">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">Update Subject Details</h4>
                    </div>
                    <div class="card-body p-5">
                        <form asp-controller="Subject" asp-action="SubjectDelete" method="post">
                            <input type="hidden" asp-for="Id" />

                            <!-- Grade Dropdown -->
                            <div class="form-group mb-4">
                                <label asp-for="GradeId" class="form-label fw-semibold">Grade</label>
                                <select asp-for="GradeId" class="form-select" asp-items="Model.Grades">
                                    <option value="">-- Select Grade --</option>
                                </select>
                                <span asp-validation-for="GradeId" class="text-danger"></span>
                            </div>

                            <!-- Subject Input -->
                            <div class="form-group mb-4">
                                <label asp-for="Subject" class="form-label fw-semibold">Subject</label>
                                <input asp-for="Subject" class="form-control" placeholder="Enter Subject Name" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-warning btn-lg me-2">
                                   Delete Subject
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
