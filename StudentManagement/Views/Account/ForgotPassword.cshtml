@using StudentManagement.ViewModel;
@model ForgotPasswordViewModel;
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">


@{
	ViewData["Title"] = "Forgot Password";
	Layout = "~/Views/Shared/_Accountlayout.cshtml";
}

<body class="bodystyle">
	@{
		var successMessage = TempData["SuccessMessage"] as string;
		var errorMessage = TempData["ErrorMessage"] as string;
	}

	<div class="alert-container">
		@if (!string.IsNullOrEmpty(successMessage))
		{
			<div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
				<strong>Success!</strong> @successMessage
				<button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}

		@if (!string.IsNullOrEmpty(errorMessage))
		{
			<div class="alert alert-danger alert-dismissible fade show custom-alert" role="alert">
				<strong>Error!</strong> @errorMessage
				<button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		}
	</div>
	<div class="login-container">
		<img src="~/Image/icon3.png" width="250px" height="250px" alt="Logo" class="mb-0 mt-0" />
		<h2 class="text-center mb-4 fw-bold">Forgot Password</h2>
		<form asp-action="ForgotPassword" method="post">
	
			<div class="mb-3">
				<label asp-for="Email" class="form-label d-flex align-items-center">
					<i class="bi bi-envelope-fill me-2"></i>
					Email
				</label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div>
				<input type="submit" value="Confirm Email" class="btn btn-success" />
			</div>
		</form>
	</div>
</body>