@using StudentManagement.ViewModel;
@model LoginViewModel;
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Accountlayout.cshtml";
}
<body class="bodystyle">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="login-container card shadow-lg p-4 rounded-4" style="width: 400px;">
            <div class="text-center mb-4">
                <img src="~/Image/icon3.png" width="150px" height="150px" alt="Logo" />
                <h2 class="fw-bold mt-1">Login</h2>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label d-flex align-items-center">
                        <i class="bi bi-envelope-fill me-2"></i>
                        Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label d-flex align-items-center">
                        <i class="bi bi-lock-fill me-2"></i>
                        Password
                    </label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Forgot Password link with blue color and right alignment -->
                <div class="d-flex justify-content-end">
                    <a asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none text-primary">Forgot your password?</a>
                </div>

                <!-- Remember Me checkbox aligned to the left -->
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="RememberMe" />
                    <label for="RememberMe" class="form-check-label" style="margin-right:230px;" >Remember Me</label>
                </div>

                <div class="text-center">
                    <input type="submit" value="Login" class="btn btn-success w-100 py-2" />
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
