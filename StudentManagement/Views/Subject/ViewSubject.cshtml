@using StudentManagement.ViewModel
@model SubjectViewModel



<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

@{
    ViewData["Title"] = "Add Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
 }



<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-Secondary text-dark" style="background-color:#e5e4e2;">
            <h2 class="text-center mb-0">List of Subjects</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover text-center table-bordered">
                <thead class="table-primary">
                    <tr style="font-size:20px">
                        @if (User.IsInRole(StudentManagement.Common.CustomRole.Student))
                        {
                            <th>Grade</th>
                            <th>Class</th>

                        }
                        else
                        {
                            <th>Grade</th>
                            <th>Class</th>
                            <th></th>
                        }
                    </tr>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subject in Model.Subjects)
                    {
                        <tr style="font-size:18px">
                            @if (User.IsInRole(StudentManagement.Common.CustomRole.Student))
                            {
                                <td>@subject.Grades.Grade</td>
                                <td>@subject.Subject</td>
                            }
                            else
                            {
                                <td>@subject.Grades.Grade</td>
                                <td>@subject.Subject</td>
                                <td>
                                    <a asp-controller="Subject" asp-action="SubjectEdit" asp-route-id="@subject.ID" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a asp-controller="Subject" asp-action="SubjectDelete" asp-route-id="@subject.ID" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            }
                          

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
