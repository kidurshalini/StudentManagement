@model IEnumerable<StudentManagement.ViewModel.RegistrationViewModel>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

@{
	ViewData["Title"] = "List of Teacher";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-5">
	<div class="card shadow">
		<div class="card-header bg-Secondary text-dark" style="background-color:#e5e4e2;">
			<h2 class="text-center mb-0">List of Teacher</h2>
		</div>
		<div class="card-body">
			<!-- Search bar -->
			<div class="row mb-4">
				<div class="col-md-12 d-flex justify-content-end">
					<!-- Flex to align to the right -->
					<form method="get" asp-controller="Account" asp-action="TeacherView" class="d-flex align-items-center w-50">
						<div class="input-group">
							<input type="text"
								   id="searchQuery"
								   name="searchQuery"
								   class="form-control form-control-sm rounded-pill"
								   placeholder="🔍 Search students by name, email, or attributes..."
								   value="@ViewContext.HttpContext.Request.Query["searchQuery"]" />
							<button type="submit" class="btn btn-sm btn-primary rounded-pill ms-2">
								<i class="bi bi-search"></i> Search
							</button>
						</div>
					</form>
				</div>
			</div>
			<table class="table table-hover text-center table-bordered">
				<thead class="table-primary">
					<tr style="font-size:20px">

						<th>Full Name</th>
						<th>Email</th>
						<th>Gender</th>
						<th>Phone Number</th>
						<th>Address</th>
						<th>Date of Birth</th>
						<th>Age</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var teacher in Model)
					{
						<tr style="font-size:18px">
							
							<td>@teacher.FullName</td>
							<td>@teacher.Email</td>
							<td>@teacher.gender</td>
							<td>@teacher.PhoneNumber</td>
							<td>@teacher.Address</td>
							<td>@teacher.DateOfBirth.ToString("yyyy-MM-dd")</td>
							<td>@teacher.Age</td>
							<td>
								<a asp-controller="Account" asp-action="TeacherEdit" asp-route-id="@teacher.ID" class="btn btn-sm btn-warning me-2">Edit</a>
								<a asp-controller="Account" asp-action="TeacherDelete" asp-route-id="@teacher.ID" class="btn btn-sm btn-danger">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>