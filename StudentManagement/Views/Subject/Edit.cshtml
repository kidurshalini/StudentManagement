@using StudentManagement.ViewModel
@model SubjectViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

@{
    ViewData["Title"] = "Edit Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="vh-500">
    @{
        var successMessage = TempData["SuccessMessage"] as string;
        var errorMessage = TempData["ErrorMessage"] as string;
    }

    <div class="alert-container">
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
                <strong>Success!</strong> @successMessage
                <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show custom-alert" role="alert">
                <strong>Error!</strong> @errorMessage
                <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center align-items-center">
        <div class="login-container mt-3">
            <form asp-controller="Subject" asp-action="Edit" method="post" class="rounded p-4">
                <h2 class="text-center mb-4 fw-bold">Edit Subject</h2>

                <!-- Hidden input for Id to identify the subject being updated -->
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3 row">
                    <label class="col-sm-3 col-form-label">Grade</label>
                    <div class="col-sm-9">
                        <select asp-for="GradeId" class="form-control" asp-items="Model.Grades">
                            <option value="">-- Select Grade --</option>
                        </select>
                    </div>
                    <span asp-validation-for="GradeId" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Subject" class="col-sm-3 col-form-label">Subject</label>
                    <div class="col-sm-9">
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <input type="submit" value="Update Subject" class="btn btn-success me-2" />
                    <input type="reset" value="Clear" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
</body>
