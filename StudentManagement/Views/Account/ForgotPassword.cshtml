@using StudentManagement.ViewModel;
@model ForgotPasswordViewModel;
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet">

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Accountlayout.cshtml";
}

<body class="bodystyle">
    @{
        var successMessage = TempData["SuccessMessage"] as string;
        var errorMessage = TempData["ErrorMessage"] as string;
    }

    <!-- Centered Form -->
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
   
        <div class="login-container card shadow-lg p-4 rounded-4" style="width: 400px;">
            <div class="alert-container">

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
                        <strong>Success!</strong> @successMessage
                        <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show custom-alert" role="alert">
                        <strong>Error!</strong> @errorMessage
                        <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
            <div class="text-center mb-4">
                <img src="~/Image/icon3.png" width="150px" height="150px" alt="Logo" />
                <h2 class="fw-bold mt-3">Forgot Password</h2>
            </div>
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label d-flex align-items-center">
                        <i class="bi bi-envelope-fill me-2"></i>
                        Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Confirm Email" class="btn btn-success w-100 py-2" />
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
